@import "/template/login/index.wxss";

page, view, image, input, textarea {
    display: block;
    box-sizing: border-box;
}

.container {
    background-color: #f2f2f2;
    padding-bottom: 100rpx;
}

.address-box {
    width: 100vw;
    margin: 20rpx 0;
    border-bottom: 1rpx solid #eee;
}

.add-address {
    width: 100vw;
    display: flex;
    align-items: center;
    padding-left: 32rpx;
}

.add-address image {
    width: 40rpx;
    height: 40rpx;
}

.add-address view {
    margin-left: 16rpx;
    font-size: 28rpx;
    color: #000;
    padding: 40rpx 0;
}

.show-address {
    width: 750rpx;
    box-sizing: border-box;
    padding: 0 32rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.show-address .name-tel {
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 20rpx 0;
}

.show-address .addr-text {
    font-size: 24rpx;
    color: #888;
    padding-bottom: 34rpx;
    line-height: 36rpx;
}

.show-address .next {
    width: 40rpx;
    height: 40rpx;
}

form {
    width: 100%;
}

.products-list {
    width: 100%;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.products-list .list-title {
    font-size: 28rpx;
    color: #000;
    padding: 30rpx 0 25rpx 30rpx;
}

.products-list .a-products {
    width: 720rpx;
    margin-left: 30rpx;
    display: flex;
    /*justify-content: space-between;*/
    border-top: 1px solid #eee;
    padding: 30rpx 30rpx 30rpx 0;
}

.products-list .a-products .img-box {
    width: 160rpx;
    height: 160rpx;
    overflow: hidden;
    margin-right: 20rpx;
    background-color: #d8d8d8;
}

.products-list .img-box .img {
    width: 160rpx;
    height: 160rpx;
}

.products-list .a-products .text-box {
    width: 510rpx;
    box-sizing: border-box;
    padding-top: 10rpx;
}

.a-products .text-box .arrow {
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.a-products .text-box .arrow .products-name {
    width: 360rpx;
    font-size: 26rpx;
    height: 74rpx;
    color: #000;
    line-height: 1.6;
    overflow: hidden;
}

.a-products .text-box .arrow01 {
    margin-bottom: 30rpx;
}

.a-products .text-box .arrow .products-price {
    font-size: 26rpx;
    color: #000;
    align-self: flex-start;
}

.a-products .text-box .arrow .products-label {
    font-size: 26rpx;
    color: #999;
}

.a-products .text-box .arrow .products-num {
    font-size: 26rpx;
    color: #999;
}

.shipping-way {
    width: 100%;
    background-color: #fff;
    margin-bottom: 20rpx;
}

.shipping-way .row-box {
    width: 720rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 0 24rpx 30rpx;
    border-bottom: 1rpx solid #eee;
}

.shipping-way .row-label.t {
    color: #333;
}

.shipping-way .row-label {
    font-size: 28rpx;
    color: #666;
}

.shipping-way .right-text {
    font-size: 28rpx;
    color: #666;
    padding-right: 30rpx;
}

.shipping-way .comment {
    width: 510rpx;
    font-size: 28rpx;
}

.products-info {
    width: 100%;
    background-color: #fff;
    margin-bottom: 120rpx;
    padding-bottom: 24rpx;
}

.products-info .row-box {
    width: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    box-sizing: border-box;
    padding: 24rpx 30rpx 12rpx 30rpx;
    font-size: 28rpx;
    color: #000;
}

.products-info .row-box .right-text {
    text-align: right;
}

.row-box .next {
    width: 40rpx;
    height: 40rpx;
}

.checkOut-box {
    display: flex;
    justify-content: space-between;
    width: 100%;
    height: 100rpx;
    position: fixed;
    bottom: calc(env(safe-area-inset-bottom) / 2);
    left: 0;
    border-top: 1px solid #eee;
    background-color: #fff;
    z-index: 999;
}

.checkOut-box .to-pay-btn {
    width: 250rpx;
    text-align: center;
    height: 100%;
    line-height: 100rpx;
    background-color: #e64340;
    font-size: 32rpx;
    color: #fff;
    border-radius: 0;
}

.checkOut-box .left-price {
    display: flex;
    width: 500rpx;
    justify-content: flex-end;
    line-height: 100rpx;
    padding: 0 30rpx 0 0;
    font-size: 28rpx;
    box-sizing: border-box;
}

.checkOut-box .total {
    color: #e64340;
    text-align: right;
}

.inline {
    display: inline;
}

.label-item-inline {
    font-size: 26rpx;
    border-radius: 6rpx;
    display: inline;
}